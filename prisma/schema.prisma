generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id                  String              @id @default(uuid())
  firstName           String
  lastName            String
  email               String              @unique
  password            String
  emailVerified       Boolean             @default(false)
  sessionRoles        SessionUserRole[]
}

model Session {
  id                  String              @id @default(uuid())
  title               String
  description         String?
  participants        SessionUserRole[]
}

model Role {
  id                  String              @id @default(uuid())
  name                String              @unique
  permissions         Permission[]
  sessionRoles        SessionUserRole[]
}

model Permission {
  id                  String              @id @default(uuid())
  name                String              @unique
  roles               Role[]
}

model SessionUserRole {
  id                  String              @id @default(uuid())
  user                User                @relation(fields: [userId], references: [id])
  userId              String

  session             Session             @relation(fields: [sessionId], references: [id])
  sessionId           String

  role                Role                @relation(fields: [roleId], references: [id])
  roleId              String

  @@unique([userId, sessionId])
}
